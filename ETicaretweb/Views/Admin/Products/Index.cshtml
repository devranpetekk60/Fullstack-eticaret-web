@model List<Models.Product>
@{
    ViewData["Title"] = "Ürün Yönetimi";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4>Ürünler</h4>
    <a asp-action="CreateProduct" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Yeni Ürün Ekle
    </a>
</div>

<div class="card">
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Ürün Adı</th>
                    <th>Fiyat</th>
                    <th>Kategori</th>
                    <th>URL</th>
                    <th>Aktif</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.id</td>
                        <td>@product.ProductName</td>
                        <td>@product.Price ₺</td>
                        <td>@(product.category?.CategoryName ?? "N/A")</td>
                        <td>@product.URL</td>
                        <td>
                            @if (product.isActive)
                            {
                                <span class="badge bg-success">Aktif</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Pasif</span>
                            }
                        </td>
                        <td>
                            <a asp-action="EditProduct" asp-route-id="@product.id" class="btn btn-sm btn-warning btn-action">
                                <i class="bi bi-pencil"></i> Düzenle
                            </a>
                            <form asp-action="DeleteProduct" method="post" style="display:inline;" onsubmit="return confirm('Bu ürünü silmek istediğinize emin misiniz?');">
                                <input type="hidden" name="id" value="@product.id" />
                                <button type="submit" class="btn btn-sm btn-danger btn-action">
                                    <i class="bi bi-trash"></i> Sil
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

