@model List<Models.Category>
@{
    ViewData["Title"] = "Kategori Yönetimi";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4>Kategoriler</h4>
    <a asp-action="CreateCategory" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Yeni Kategori Ekle
    </a>
</div>

<div class="card">
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Kategori Adı</th>
                    <th>URL</th>
                    <th>Resim</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.id</td>
                        <td>@category.CategoryName</td>
                        <td>@category.URL</td>
                        <td>
                            @if (!string.IsNullOrEmpty(category.ImageUrl))
                            {
                                <img src="~/images/categories/@category.ImageUrl" alt="@category.CategoryName" style="max-width: 50px; max-height: 50px;" />
                            }
                            else
                            {
                                <span class="text-muted">Resim Yok</span>
                            }
                        </td>
                        <td>
                            <a asp-action="EditCategory" asp-route-id="@category.id" class="btn btn-sm btn-warning btn-action">
                                <i class="bi bi-pencil"></i> Düzenle
                            </a>
                            <form asp-action="DeleteCategory" method="post" style="display:inline;" onsubmit="return confirm('Bu kategoriyi silmek istediğinize emin misiniz?');">
                                <input type="hidden" name="id" value="@category.id" />
                                <button type="submit" class="btn btn-sm btn-danger btn-action">
                                    <i class="bi bi-trash"></i> Sil
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

