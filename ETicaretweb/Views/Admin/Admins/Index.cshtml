@model List<Models.Admin>
@{
    ViewData["Title"] = "Admin Kullanıcı Yönetimi";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4>Admin Kullanıcılar</h4>
    <a asp-action="CreateAdmin" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Yeni Admin Ekle
    </a>
</div>

<div class="card">
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Kullanıcı Adı</th>
                    <th>Rol</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var admin in Model)
                {
                    <tr>
                        <td>@admin.Id</td>
                        <td>@admin.Username</td>
                        <td>
                            <span class="badge bg-primary">@admin.Role</span>
                        </td>
                        <td>
                            <a asp-action="EditAdmin" asp-route-id="@admin.Id" class="btn btn-sm btn-warning btn-action">
                                <i class="bi bi-pencil"></i> Düzenle
                            </a>
                            @if (admin.Id != 1) // İlk admini silmeyi engelle
                            {
                                <form asp-action="DeleteAdmin" method="post" style="display:inline;" onsubmit="return confirm('Bu admin kullanıcısını silmek istediğinize emin misiniz?');">
                                    <input type="hidden" name="id" value="@admin.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger btn-action">
                                        <i class="bi bi-trash"></i> Sil
                                    </button>
                                </form>
                            }
                            else
                            {
                                <span class="text-muted small">Ana admin silinemez</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

