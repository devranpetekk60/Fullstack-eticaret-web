@model Models.Admin
@{
    ViewData["Title"] = "Admin Düzenle";
    Layout = "_AdminLayout";
}

<div class="card">
    <div class="card-header">
        <h5>Admin Düzenle</h5>
    </div>
    <div class="card-body">
        <form asp-action="EditAdmin" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="PasswordHash" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="mb-3">
                <label asp-for="Username" class="form-label">Kullanıcı Adı *</label>
                <input asp-for="Username" class="form-control" required />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="NewPassword" class="form-label">Yeni Şifre (Değiştirmek istemiyorsanız boş bırakın)</label>
                <input type="password" name="NewPassword" class="form-control" />
                <small class="form-text text-muted">Şifreyi değiştirmek istemiyorsanız bu alanı boş bırakın.</small>
            </div>

            <div class="mb-3">
                <label asp-for="Role" class="form-label">Rol</label>
                <select asp-for="Role" class="form-select">
                    <option value="Admin">Admin</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Güncelle
                </button>
                <a asp-action="Admins" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> İptal
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

