@{
    ViewData["Title"] = "Dashboard";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-md-3">
        <div class="card text-white bg-primary">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title">Toplam Ürün</h6>
                        <h2>@ViewBag.ProductCount</h2>
                    </div>
                    <i class="bi bi-box-seam fs-1"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title">Toplam Kategori</h6>
                        <h2>@ViewBag.CategoryCount</h2>
                    </div>
                    <i class="bi bi-tags fs-1"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-info">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title">Toplam Resim</h6>
                        <h2>@ViewBag.ImageCount</h2>
                    </div>
                    <i class="bi bi-images fs-1"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title">Admin Kullanıcı</h6>
                        <h2>@ViewBag.AdminCount</h2>
                    </div>
                    <i class="bi bi-people fs-1"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card mt-4">
    <div class="card-body">
        <h5 class="card-title">Hızlı İşlemler</h5>
        <div class="d-grid gap-2 d-md-block">
            <a asp-action="CreateProduct" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Yeni Ürün Ekle
            </a>
            <a asp-action="CreateCategory" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Yeni Kategori Ekle
            </a>
            <a asp-action="CreateProductImage" class="btn btn-info">
                <i class="bi bi-plus-circle"></i> Yeni Resim Ekle
            </a>
            <a asp-action="CreateAdmin" class="btn btn-warning">
                <i class="bi bi-plus-circle"></i> Yeni Admin Ekle
            </a>
        </div>
    </div>
</div>

