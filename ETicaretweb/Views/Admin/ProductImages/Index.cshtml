@model List<Models.ProductImage>

@{
    ViewData["Title"] = "Ürün Resimleri Yönetimi";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4>Ürün Resimleri</h4>
    <a asp-action="CreateProductImage" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Yeni Resim Ekle
    </a>
</div>

<div class="card">
    <div class="card-body">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Ürün</th>
                    <th>Resim URL</th>
                    <th>Önizleme</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var image in Model)
                {
                    <tr>
                        <td>@image.id</td>

                        <td>
                            @(image.Product != null ? image.Product.ProductName : "N/A")
                        </td>

                        <td>
                            @image.Url
                        </td>

                        <td>
                            @if (!string.IsNullOrEmpty(image.Url))
                            {
                                <img src="@image.Url"
                                     alt="Ürün Resmi"
                                     style="max-width:100px; max-height:100px; border-radius:6px;"
                                     onerror="this.style.display='none'; this.nextElementSibling.style.display='inline';" />
                                <span class="text-muted" style="display:none;">Resim bulunamadı</span>
                            }
                            else
                            {
                                <span class="text-muted">Resim yok</span>
                            }
                        </td>

                        <td>
                            <form asp-action="DeleteProductImage"
                                  method="post"
                                  onsubmit="return confirm('Bu resmi silmek istediğinize emin misiniz?');">
                                <input type="hidden" name="id" value="@image.id" />
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Sil
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
