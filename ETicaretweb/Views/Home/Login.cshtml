@using Models
@model Admin

<form asp-action="Login" asp-controller="Home" method="post">
    <div class="formdiv">
        <h2>LOGIN</h2>

        <label asp-for="Username" class="form-label">Kullanıcı Adınız:</label>
        <input type="text" asp-for="Username" class="form-control" required/>

        <label asp-for="PasswordHash" class="form-label">Şifreniz:</label>
        <input type="password" asp-for="PasswordHash" class="form-control" required/>

        <button type="submit" class="btn-submit">Gönder</button>
    </div>
</form>

